@model eEvento.Models.Evento

@{
    ViewBag.Title = "Excluir Evento";
}

<div class="container mt-4">
    <h2 class="text-danger">Excluir Evento</h2>
    <h3>Tem certeza de que deseja excluir este evento?</h3>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Detalhes do Evento</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Local.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Local.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Data)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Data)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Capacidade)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacidade)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <input type="submit" value="Excluir" class="btn btn-danger me-2" />
                @Html.ActionLink("Voltar para a lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
