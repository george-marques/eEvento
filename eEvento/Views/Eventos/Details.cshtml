@model eEvento.Models.Evento

@{
    ViewBag.Title = "Detalhes do Evento";
}

<main aria-labelledby="title" class="container mt-4">
    <!-- Card Principal -->
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Detalhes do Evento</h4>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Card para Dados do Evento -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">Dados do Evento</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Nome)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Nome)
                                </dd>

                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>

                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Data)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Data)
                                </dd>

                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Capacidade)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Capacidade)
                                </dd>

                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Local.Nome)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Local.Nome)
                                </dd>

                                <dt class="col-sm-4 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.Local.Endereco)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Local.Endereco)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Card para Dados da Organização -->
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">Dados da Organização</h5>
                        </div>
                        <div class="card-body">
                            <!-- Subcard para Dados do Organizador -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Dados do Organizador</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Organizador.Nome)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Organizador.Nome)
                                        </dd>

                                        <dt class="col-sm-4 font-weight-bold">
                                            @Html.DisplayNameFor(model => model.Organizador.Contato)
                                        </dt>
                                        <dd class="col-sm-8">
                                            @Html.DisplayFor(model => model.Organizador.Contato)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <!-- Subcard para Dados do Patrocinador -->
                            <div class="card shadow-sm">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Dados dos Patrocinadores</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4 font-weight-bold">Patrocinadores</dt>
                                        <dd class="col-sm-8">
                                            @(Model.Patrocinadores != null && Model.Patrocinadores.Any()
                                                ? string.Join(", ", Model.Patrocinadores.Select(p => p.Nome))
                                                : "Sem patrocinador")
                                        </dd>

                                        <dt class="col-sm-4 font-weight-bold">Contato</dt>
                                        <dd class="col-sm-8">
                                            @(Model.Patrocinadores != null && Model.Patrocinadores.Any()
                                                ? string.Join(", ", Model.Patrocinadores.Select(p => p.Contato))
                                                : "Sem Contato")
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botões de Ação -->
            <div class="text-center mt-4">
                @Html.ActionLink("Editar", "Edit", new { id = Model.EventoId }, new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</main>


