@model IEnumerable<eEvento.Models.Inscricao>

@{
    ViewBag.Title = "Inscrições";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewBag.Title</h2>
        <div class="d-flex">
            <form method="get" action="@Url.Action("Index")" class="d-flex me-2">
                <input type="text" name="searchTerm" class="form-control form-control-sm me-2" placeholder="Pesquisar participante" />
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-search"></i>
                </button>
            </form>
            <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Nova Inscrição
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Evento.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Participante.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().DataInscricao)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Evento.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Participante.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataInscricao)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.InscricaoId })" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a href="@Url.Action("Details", new { id = item.InscricaoId })" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-info-circle"></i> Detalhes
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.InscricaoId })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

