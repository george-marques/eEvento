@model eEvento.Models.Local

@{
    ViewBag.Title = "Excluir Local";
}

<div class="container mt-4">
    <h2 class="text-danger">Excluir Local</h2>
    <h3>Tem certeza de que deseja excluir este local?</h3>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Detalhes do Local</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Endereco)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CapacidadeMaxima)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CapacidadeMaxima)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <input type="submit" value="Excluir" class="btn btn-danger me-2" />
                @Html.ActionLink("Voltar para a lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
