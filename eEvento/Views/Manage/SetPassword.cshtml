@model eEvento.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Criar senha";
}

<div class="container-fluid d-flex align-items-center justify-content-center">
    <main class="card shadow-lg p-4" style="width: 100%; max-width: 450px; border-radius: 10px;">
        <div class="card-body text-center">
            <h2 class="text-primary mb-3">Criar login local</h2>
            <p class="text-info">
                Você não tem um nome de usuário/senha local para este site. Adicione uma conta
                local para que você possa entrar sem um login externo.
            </p>

            @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <!-- Campo de Nova Senha -->
                <div class="mb-3 text-center">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg mx-auto", style = "max-width: 100%;", placeholder = "Nova senha" })
                </div>

                <!-- Campo de Confirmação de Senha -->
                <div class="mb-3 text-center">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg mx-auto", style = "max-width: 100%;", placeholder = "Confirme sua senha" })
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Definir senha</button>
                </div>
            }
        </div>
    </main>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
