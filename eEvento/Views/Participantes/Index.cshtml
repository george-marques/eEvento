@model IEnumerable<eEvento.Models.Participante>

@{
    ViewBag.Title = "Participantes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewBag.Title</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Novo Participante
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().CPF)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ParticipanteId })" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.ParticipanteId })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

